<% content_for :stylesheets do %>
  <%= raw stylesheet_link_merged :admin %>
<% end %>

<h1>Listing leagues</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Sport</th>
    <th>Abbreviation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leagues.each do |league| %>
  <tr>
    <td><%= league.name %></td>
    <td><%= league.sport %></td>
    <td><%= league.abbreviation %></td>
    <td><%= link_to 'Show', league %></td>
    <td><%= link_to 'Edit', edit_league_path(league) %></td>
    <td><%= link_to 'Destroy', league, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

