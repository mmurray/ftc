
<% content_for :stylesheets do %>
    <%= raw stylesheet_link_merged :login %>
<% end %>

<div class="round-box black clearfix">
<div class="loginForm">
  <h2>Login</h2>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<%= error_messages_for resource, :header_message => "Oops, an error occurred" %>
<table>
  <tr>
    <td><%= f.label :email, "Username/Email" %></td>
    <td><%= f.text_field :email %></td>
  </tr>
  
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
</table>
 <!-- <% if devise_mapping.rememberable? %>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end %>  -->

  <div class="form-buttons">
      <%= f.submit "Login", :class => "blueButton round-box" %>
    </div>
<% end %>
<%= render :partial => "devise/shared/links" %>
</div>
</div>